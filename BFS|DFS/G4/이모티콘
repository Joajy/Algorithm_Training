import java.io.*;
import java.util.*;

public class Main {

    static BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
    static StringTokenizer st;
    static int s;
    static boolean[][] vis;

    static class Info {
        int val, copy, count;
        Info(int val, int copy, int count) {
            this.val = val;
            this.copy = copy;
            this.count = count;
        }
    }

    static void input() throws IOException {
        s = Integer.parseInt(br.readLine());
        vis = new boolean[s + 1][s + 1];
    }

    static void solution() {
        Deque<Info> q = new ArrayDeque<>();
        q.add(new Info(1, 0, 0));
        while(!q.isEmpty()) {
            Info cur = q.poll();
            if(cur.val == s) {
                System.out.println(cur.count);
                return;
            }
            //현재 값과 복사된 값을 가진 내용을 이미 탐색한 경우
            if(vis[cur.val][cur.copy]) continue;
            vis[cur.val][cur.copy] = true;
            //복사하는 데 한 번 행동
            if(!vis[cur.val][cur.val]) {
                q.add(new Info(cur.val, cur.val, cur.count + 1));
            }
            //클립보드 내용 붙여넣기
            if(cur.val + cur.copy <= s && !vis[cur.val + cur.copy][cur.copy]) {
                q.add(new Info(cur.val + cur.copy, cur.copy, cur.count + 1));
            }
            //클립보드 내용 하나 삭제
            if(cur.val - 1 >= 1 && !vis[cur.val - 1][cur.copy]) {
                q.add(new Info(cur.val - 1, cur.copy, cur.count + 1));
            }
        }
    }

    public static void main(String[] args) throws IOException {
        input();
        solution();
    }
}
