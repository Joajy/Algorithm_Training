WITH CLASSIFY AS (
    SELECT ID, PERCENT_RANK() OVER (ORDER BY SIZE_OF_COLONY DESC) * 100 AS SIZE
    FROM ECOLI_DATA
)

SELECT A.ID, CASE WHEN B.SIZE <= 25 THEN 'CRITICAL'
             WHEN B.SIZE <= 50 THEN 'HIGH'
             WHEN B.SIZE <= 75 THEN 'MEDIUM'
             ELSE 'LOW' END AS COLONY_NAME
  FROM ECOLI_DATA A JOIN CLASSIFY B ON A.ID = B.ID
  
