#include<iostream>
#include<cmath>
using namespace std;

int n, answer;
int b[51];

void input() {
	cin >> n;
	for(int i = 0; i < n; ++i) {
		cin >> b[i];
	}
	answer = 0;
}

void solution() {
	for (int i = 0; i < n; ++i) {
		int cnt = 0;
		double maxGrad = 1e9;
		for (int j = i - 1; j >= 0; --j) {
			double gradient = (b[i] - b[j]) / double(i - j);
			if(maxGrad > gradient) {
				maxGrad = gradient;
				++cnt;
			}
		}
		maxGrad = -1e9;
		for (int j = i + 1; j < n; ++j) {
			double gradient = (b[i] - b[j]) / double(i - j);
			if (maxGrad < gradient) {
				maxGrad = gradient;
				++cnt;
			}
		}
		answer = max(answer, cnt);
	}
	cout << answer;
}

int main() {
	cin.tie(); cout.tie();
	ios::sync_with_stdio(0);
	input();
	solution();

	return 0;
}
